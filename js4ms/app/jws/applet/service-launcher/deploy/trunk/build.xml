<project basedir="." default="build" name="Builds service launcher applet for JNLP deployment">

	<property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>

    <import file="build-web-app.xml"/>
    <import file="build-war.xml"/>
    <import file="deploy-tomcat.xml"/>
    <import file="deploy-gae.xml"/>
    
    <target name="init"></target>

    <target name="build"
            description="builds web application"
            depends="build-web-app" />

    <target name="clean"
            description="deletes all generated files"
            depends="clean-web-app,clean-war-file" />

</project>
