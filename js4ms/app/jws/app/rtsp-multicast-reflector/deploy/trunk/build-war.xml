<project>

	<property file="app.properties" />

    <property name="war.file" value="${app.name}.war" />

    <target name="build-war-file">
        <war destfile="build/${war.file}" webxml="WebContent/WEB-INF/web.xml">
            <fileset dir="WebContent">
                <exclude name="WEB-INF/web.xml" />
                <exclude name="WEB-INF/appengine-web.xml" />
                <exclude name="WEB-INF/lib/jsr107*.jar" />
                <exclude name="WEB-INF/lib/appengine*.jar" />
            </fileset>
            <lib dir="WebContent/WEB-INF/lib" />
        </war>
    </target>

    <target name="clean-war-file">
        <delete file="build/${war.file}" />
    </target>

</project>
