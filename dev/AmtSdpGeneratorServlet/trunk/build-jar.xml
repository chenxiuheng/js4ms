<project>

	<property file="servlet.properties" />

	<import file="gen-version.xml" />
	
	<target name="build-jar" description="builds jar file" depends="gen-version">

        <property name="servlet.jar.name" value="${servlet.name}.jar"/>
        <property name="servlet.jar.file" value="${servlet.name}__V${servlet.version}.jar"/>

		<!-- Delete all existing versions of the jar file -->
        <delete>
        	<fileset dir="WebContent/WEB-INF/lib" includes="${servlet.name}*.jar"/>
     	</delete>
  
		<jar destfile="WebContent/WEB-INF/lib/${servlet.jar.file}">
			<fileset dir="./build/classes">
				<include name="**/*.class" />
			</fileset>
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Implementation-Vendor" value="${servlet.vendor}"/>
                <attribute name="Implementation-Title" value="${servlet.name}"/>
                <attribute name="Implementation-Version" value="${servlet.version}"/> 
            </manifest>
        </jar>

    </target>

	<target name="clean-jar">
        <delete>
            <fileset dir="WebContent/WEB-INF/lib" includes="*.jar"/>
        </delete>
	</target>

</project>
