<?eclipse.ant.import?>
<project>

    <property file="app.properties" />

    <target name="gen-version">
        <tstamp>
            <format property="app.timestamp" timezone="GMT" pattern="yyyyMMddHHmm" />
            <format property="app.timestamp.year" timezone="GMT" pattern="yyyy" />
            <format property="app.timestamp.month" timezone="GMT" pattern="MM" />
            <format property="app.timestamp.day" timezone="GMT" pattern="dd" />
            <format property="app.timestamp.hour" timezone="GMT" pattern="HH" />
            <format property="app.timestamp.minute" timezone="GMT" pattern="mm" />
        </tstamp>
        <property name="app.version" value="${app.version.major}.${app.version.minor}.${app.version.maint}.v${app.timestamp}"/>
        <script language="javascript"><![CDATA[
            
            // |                       .                       .                       .                       |
            // +--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+
            // | Minor           | Maint           |<------------- Minutes since last release ---------------->|
            // +--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+

            var minor = project.getProperty("app.version.minor");
            var maint = project.getProperty("app.version.maint");

            var year = project.getProperty("app.timestamp.year") - 2000;
            var month = project.getProperty("app.timestamp.month");
            var day = project.getProperty("app.timestamp.day");
            var hour = project.getProperty("app.timestamp.hour");
            var minute = project.getProperty("app.timestamp.minute");
            var currentOffset = Number(minute) + Number(hour << 6) + Number(day << 11) + Number(month << 16) + Number(year << 20);

            var year = project.getProperty("app.release.year") - 2000;
            var month = project.getProperty("app.release.month");
            var day = project.getProperty("app.release.day");
            var hour = project.getProperty("app.release.hour");
            var minute = project.getProperty("app.release.minute");
            var previousOffset = Number(minute) + Number(hour << 6) + Number(day << 11) + Number(month << 16) + Number(year << 20);

            var versionOffset = currentOffset - previousOffset;
        
            var version3 = versionOffset & 0xFF;
            var version2 = (versionOffset >> 8) & 0xFF;
            var version1 = (versionOffset >> 16) & 0x0F;
            version2 += (maint & 0xF) << 4;
            var version0 = ((maint >> 4) & 0x3) + ((minor & 0x3f) << 2)
        
            var cacheVersion = version0.toString(16)+"."+version1.toString(16)+"."+version2.toString(16)+"."+version3.toString(16);
        
            project.setProperty("app.version.cache", cacheVersion);
        ]]></script>
        <echo message="app version: ${app.version}  cache-version: ${app.version.cache}" />
    </target>

</project>